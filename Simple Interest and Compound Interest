#include <stdio.h>
#include <conio.h>
#include <math.h>

float simpleInterest(float p, float r, float t) {
    return (p * r * t) / 100;
}

float compoundInterest(float p, float r, float t) {
    return p * pow((1 + r / 100), t) - p;
}

void main() {
    int choice;
    float p, r, t, result;

    clrscr();

    printf("INTEREST CALCULATION PROGRAM\n");
    printf("\n1. Simple Interest");
    printf("\n2. Compound Interest");
    printf("\nEnter your choice: ");
    scanf("%d", &choice);

    printf("\nEnter Principal (P): ");
    scanf("%f", &p);
    printf("Enter Rate (R): ");
    scanf("%f", &r);
    printf("Enter Time (T): ");
    scanf("%f", &t);

    switch(choice) {
        case 1:
            result = simpleInterest(p, r, t);
            printf("\nSimple Interest = %.2f", result);
            break;

        case 2:
            result = compoundInterest(p, r, t);
            printf("\nCompound Interest = %.2f", result);
            break;

        default:
            printf("\nInvalid choice!");
    }

    getch();
}
